#include<stdio.h>
int main() 
{	
	   float p;int money,p1,p2;
	   printf("请输入你的工资(单位\元)");
       scanf("%f",&p);

       if(p<=3000)                      money=0.005*p;

       else if(p>3000&&p<=5000)        money=0.01*p;

       else if (p>5000&&p<=10000)       money=0.015*p;

       else                          money=0.02*p;
       printf("你应交的党费为%d元\n",money);
       return 0;

}
